<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".adapters.ChatAdapter">

    <!-- Avatar Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAvatarContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <!-- Online Indicator -->
    <View
        android:id="@+id/vOnlineIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/online_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cvAvatarContainer"
        app:layout_constraintEnd_toEndOf="@id/cvAvatarContainer"
        tools:visibility="visible" />

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/llMainContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/cvAvatarContainer"
        app:layout_constraintBottom_toBottomOf="@id/cvAvatarContainer"
        app:layout_constraintStart_toEndOf="@id/cvAvatarContainer"
        app:layout_constraintEnd_toStartOf="@id/llRightContent">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvChatName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chat Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/tvChatType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GROUP"
                android:textSize="10sp"
                android:textColor="#3B82F6"
                android:textStyle="bold"
                android:background="@drawable/chat_type_background"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Message Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You: "
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Alice: " />

            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last message content..."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Hey, how are you doing today?" />

            <ImageView
                android:id="@+id/ivMessageType"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_attachment"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:alpha="0.6"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Content Container -->
    <LinearLayout
        android:id="@+id/llRightContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toTopOf="@id/cvAvatarContainer"
        app:layout_constraintBottom_toBottomOf="@id/cvAvatarContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginBottom="4dp"
            tools:text="12:30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Message Status Indicator -->
            <ImageView
                android:id="@+id/ivMessageStatus"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_check_double"
                android:visibility="gone"
                android:layout_marginEnd="6dp"
                android:alpha="0.7"
                tools:visibility="visible" />

            <!-- Unread Badge -->
            <TextView
                android:id="@+id/tvUnreadCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/unread_badge_background"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="5" />

            <!-- Mute Indicator -->
            <ImageView
                android:id="@+id/ivMuted"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_mute"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:alpha="0.6"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Pinned Indicator -->
    <ImageView
        android:id="@+id/ivPinned"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_pin"
        android:visibility="gone"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>